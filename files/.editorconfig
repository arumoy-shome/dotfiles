root = true

[*]
chatset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
tab_width = 2

[*.org]
tab_width = 8
max_line_length = 72

[*.py]
indent_size = 4

[*.md]
indent_size = 4
max_line_length = 72

[*.tex]
max_line_length = 72

[Makefile]
indent_style = tab
