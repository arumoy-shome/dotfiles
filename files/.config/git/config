[user]
  name = Arumoy Shome
  email = contact@arumoy.me
[github]
  user = arumoy-shome
[init]
  templatedir = ~/.config/git/template
  defaultBranch = master
[push]
  default = upstream
[color]
  ui = true
  status = true
[alias]
  s = status
  b = branch
  l = log --oneline --graph
  bd = branch -d
  co = checkout
  cof = checkout --
  cob = checkout -b
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  sla = log --color --graph --pretty=format:'%Cred%h%Creset %C(yellow)%d%Creset %s %Cgreen%cD %C(bold blue)%an%Creset'
  uncommit = reset --soft "HEAD^"
  glog = log -E -i --grep
  car = commit --amend --no-edit
  unstage = reset
  squash = rebase -i
  ctags = !.git/hooks/ctags
  sidediff = difftool --no-symlinks --dir-diff
[core]
  excludesfile = ~/.config/git/ignore
  autocrlf = input
[merge]
  ff = only
[mergetool]
  prompt = true
[commit]
  template = ~/.config/git/message
[fetch]
  prune = true
[rebase]
  autosquash = true
[pull]
  rebase = true
[log]
  abbrevCommit = true
  decorate = true
[format]
  pretty = '%Cred%h%Creset %C(yellow)%d%Creset %s %Cgreen%cr %C(bold blue)%an%Creset'
[merge]
  conflictstyle = diff3
[diff]
  colorMoved = default
[rerere]
  enabled = true
[column]
  ui = auto
[branch]
  sort = -committerdate
[help]
  autocorrect = 10 ; auto-correct command after 1 second
